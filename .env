# Polymarket API Configuration
# Data API for market and trader information
POLYMARKET_DATA_API=https://data-api.polymarket.com

# Gamma API for advanced analytics
POLYMARKET_GAMMA_API=https://gamma-api.polymarket.com

# Scanning Thresholds
# Minimum profit (USD) to consider a trader
SCAN_MIN_PROFIT=5000

# Minimum win rate (0.0-1.0) to consider a trader
SCAN_MIN_WIN_RATE=0.85

# Maximum account age in days (newer accounts = emerging traders)
SCAN_MAX_AGE_DAYS=60

# Rate Limiting
# Requests per second to avoid hitting API limits
RATE_LIMIT_RPS=5

# Burst capacity for rate limiter
RATE_LIMIT_BURST=10

# Output Configuration
# Directory for scan results and reports
OUTPUT_DIR=./output

# Directory for persistent data (watchlist, cache, etc.)
DATA_DIR=./data

# Analysis Settings
# Minimum number of trades required for meaningful analysis
MIN_TRADES_FOR_ANALYSIS=10

# Number of days to look back for historical analysis
LOOKBACK_DAYS=90

# Watchlist Configuration
# Path to watchlist JSON file
WATCHLIST_PATH=./data/watchlist.json

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

