# Poly-Scout Configuration

# =============================================================================
# DAEMON / AUTO-PILOT MODE
# =============================================================================
# How often to scan (minutes)
SCAN_INTERVAL_MINUTES=30

# =============================================================================
# EXPLOSIVE GROWTH DETECTION THRESHOLDS (Velocity-based)
# =============================================================================
# Velocity = total_profit / account_age_days ($/day)

# Tier 1: Rising Star - New wallet with explosive velocity
# Catches wallets < 14 days old making $500+/day
TIER1_MIN_VELOCITY=500
TIER1_MAX_ACCOUNT_AGE_DAYS=14
TIER1_MIN_TRADES_WEEK=30

# Tier 2: Fast Grower - High velocity, relatively new
# Catches wallets < 30 days old making $300+/day
TIER2_MIN_VELOCITY=300
TIER2_MAX_ACCOUNT_AGE_DAYS=30
TIER2_MIN_PROFIT=3000

# Tier 3: Hot Streak - Good velocity + high activity, not too big yet
# Catches active wallets making $150+/day with < $30k total
TIER3_MIN_VELOCITY=150
TIER3_MAX_TOTAL_PROFIT=30000
TIER3_MIN_TRADES_WEEK=50

# Minimum profit to even consider (filters out noise)
MIN_LEADERBOARD_PROFIT=1000

# Telegram Notifications (get token from @BotFather on Telegram)
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# =============================================================================
# BLOCKCHAIN SCANNING (Smart Money Detection)
# =============================================================================
# Polygon RPC URL for scanning Polymarket trades on-chain
# Free options:
#   - Alchemy: https://polygon-mainnet.g.alchemy.com/v2/YOUR_API_KEY
#   - QuickNode: https://polygon.quiknode.pro/YOUR_API_KEY
#   - Public (less reliable): https://polygon-rpc.com
POLYGON_RPC_URL=https://polygon-rpc.com

# =============================================================================
# API ENDPOINTS
# =============================================================================
POLYMARKET_DATA_API=https://data-api.polymarket.com
POLYMARKET_GAMMA_API=https://gamma-api.polymarket.com

# Rate Limiting
# Requests per second to avoid hitting API limits
RATE_LIMIT_RPS=5

# Burst capacity for rate limiter
RATE_LIMIT_BURST=10

# Output Configuration
# Directory for scan results and reports
OUTPUT_DIR=./output

# Directory for persistent data (watchlist, cache, etc.)
DATA_DIR=./data

# Analysis Settings
# Minimum number of trades required for meaningful analysis
MIN_TRADES_FOR_ANALYSIS=10

# Number of days to look back for historical analysis
LOOKBACK_DAYS=90

# Watchlist Configuration
# Path to watchlist JSON file
WATCHLIST_PATH=./data/watchlist.json

# Logging Configuration
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# Optional: Path to log file (leave empty for console only)
# LOG_FILE=./logs/poly-scout.log
